generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// schema.prisma

// Enums
enum PetGender {
  MALE
  FEMALE
}

enum PetCategory {
  DOG
  CAT
  BIRD
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
  EX_LARGE
}

enum PetColor {
  WHITE
  BLACK
  BROWN
  GRAY
}

enum PetBreed {
  HUSKY
  BEAGLE
  DOGOT
  LABRADO
  POMERANIAN
}

// Model
model Pet {
  id          String      @id @default(uuid())
  userId      String
  name        String
  breed       PetBreed    @default(HUSKY)
  age         Float       @default(2)
  color       PetColor    @default(BLACK)
  size        PetSize     @default(MEDIUM)
  description String
  image       String?
  category    PetCategory @default(DOG)
  gender      PetGender   @default(MALE)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now())
}

// PetAdoption

model PetAdoption {
  id          String      @id @default(cuid())
  petId       String
  userId      String
  description String?
  status      String?
  size        PetSize     @default(MEDIUM)
  color       PetColor    @default(BLACK)
  breed       PetBreed    @default(HUSKY)
  age         Float       @default(2)
  category    PetCategory @default(DOG)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now())
}
